@model WaffleOffer.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h4 class="dark-heading">Login</h4>

@Html.ValidationSummary(true)

@using (Html.BeginForm())
{
    @Html.EditorForModel()
    <p>
        <button type="submit" class="btn btn-custom-submit">Log In</button>
    </p>
}
<p class="tiny-text">Don't have an account yet? @Html.ActionLink("Sign up", "Register", null, new { @class = "tiny-text" }) now for free!</p>


