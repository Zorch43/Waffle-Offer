<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Waffle Offer</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Waffle Offer", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

				<li class="custom-nav-item-both">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="custom-nav-item">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="custom-nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="custom-nav-item">@Html.ActionLink("Items", "Index", "Items")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @*Authentication links*@
                    @if (User.Identity.IsAuthenticated)
                        {
                            <li class="custom-nav-item-right">@Html.ActionLink(User.Identity.Name, "Index", "Profile")</li>
                            <li class="custom-nav-item-right">@Html.ActionLink("Messages", "Inbox", "Messages", null, null)</li>
                            <li class="custom-nav-item-right"><a href="@Url.Action("logout", "auth")">Log Out</a></li>
                        }
                        else
                        {
                            <li class="custom-nav-item-right"><a href="@Url.Action("login", "auth")">Log In</a></li>
                            <li class="custom-nav-item-both"><a href="@Url.Action("Register", "auth")">Register</a></li>
                        }
                </ul>
                @*@Html.Partial("_AuthLoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-md-8">
                <div class="col-md-3">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">Support</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <address>
                    1234 Alphabet Lane, Suite #5 <br />
                    Eugene, OR 97402 <br />
                    Phone: 1-541-555-1234 <br />
                    Fax: 1-541-555-9876 <br />
                    Email: info@waffle-offer.com <br />
                    &copy; @DateTime.Now.Year Waffle Offer, All Rights Reserved
                </address>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
